<section class="user">
  <h1><%=@user.name%></h1>
  <h2><%=@user.email%></h2>
  <% if current_user?(@user) %>
    <div class="actions">
        <%= link_to "Edit Account", edit_user_path, class: "button edit"%>
        <%= link_to "Delete Account", user_path, class: "button delete",
        data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
    </div>
  <% end %>
</section>
