<%if object.errors.any?%>
  <section class="errors">
    <h2>Some fields where not filled correctly</h2>
    <h3>Please correct the following <%=pluralize(object.errors.count, "error")%>:</h3>
    <ul>
      <% object.errors.full_messages.each do |error| %>
        <li><%=error%></li> 
      <%end%>
    </ul>
  </section>
<%end%>
