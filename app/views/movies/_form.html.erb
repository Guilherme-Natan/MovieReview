<%= form_with(model: movie) do |form|%>
  
  <%=render "shared/form_errors", object:movie%>

  <%=form.label :title%>
  <%=form.text_field :title, autofocus: true%>

  <%=form.label :rating%>
  <%=form.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%=form.label :released_on%>
  <%# TODO: Change format to dd/mm/yyyy in portuguese %>
  <%=form.date_select :released_on, {order:  [:month, :day, :year]}, {class: "date"}%>

  <%=form.label :description%>
  <%=form.text_area :description, rows: 5%>

  <%=form.label :total_gross%>
  <%=form.number_field :total_gross%>

  <%=form.label :director%>
  <%=form.text_field :director%>

  <%=form.label :duration%>
  <%=form.number_field :duration%>

  <%=form.label :image_file_name%>
  <%=form.text_field :image_file_name%>
  
  <div class="checkboxes">
    <%= form.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
  </div>
  
  <%=form.submit%>
<%end%>

